@using MyHandMadeShop.Web.ViewModels.Orders
@model CancelOrderViewModel
@{
    ViewData["Title"] = "Cancel Order";
}

<h3>Are you sure you want to cancel this Service?</h3>
<div class="w-75">
    <hr />
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input disabled="disabled" asp-for="Id" class="form-control" />
    </div>
    
    <div class="form-group">
        <p class="card-text"><b>Address:</b> @Model.Id
    <hr />
    <form asp-action="Cancel" method="post">
        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-info" href="/Items/All">Back to All Items</a>
            </div>
            <div>
                <input type="submit" value="Cancel Service" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>

