@using MyHandMadeShop.Web.ViewModels.Orders
@model List<OrderServiceModel>
@{
    this.ViewData["Title"] = "Buy";
}
<h1>Списък с поръчки</h1>
<hr />
 
@if (Model.Count > 0)
{
    @foreach (var order in Model)
    {
        <table class="table table-bordered table-sm mb-4">
            <thead class="bg-primary text-white">
                <tr>
                    <td colspan="2">Order Id: @order.OrderId</td>
                    <th>Цена</th>
                    <th>Количество</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItem in order.OrderItemModels)
                {
                    <tr>
                        <td style="width:60px">
                            <img src="~/img/@orderItem.ImageUrl" width="50" />
                        </td>
                        <td>@orderItem.Name</td>
                        <td>@orderItem.Price &#8378;</td>
                        <td>@orderItem.Quantity</td>
                        <td rowspan="6">Обща цена: @order.TotalPrice() &#8378;</td>
                    </tr>
                }
            </tbody>
            
        </table>
    }
}
else
{
    <div class="alert alert-warning">
        Досега не е правена поръчка.
    </div>
}