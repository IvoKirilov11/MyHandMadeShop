@using MyHandMadeShop.Web.ViewModels.Orders
@model BuyViewModel
@{
    this.ViewData["Title"] = "Списък с поръчки";
}

    <h1>@ViewData["Title"]</h1>


    <div class="row">
        @foreach (var order in Model.Orders)
        {
            <div class="col-1 text-center">
                <input id="order_@order.Id"
                       type="checkbox"
                       name="Orders"
                       value="@order.Id"
                       class="form-control" />
                <label for="order_@order.Id">@order.Name</label>
            </div>
        }
    </div>
    <div class="row">
        @foreach (var item in this.Model.Items)
        {
            <div class="card col-md-3">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ItemTypeName</p>
                    
                </div>
            </div>
        }
    </div>
     

                    
               
    
   




