@using MyHandMadeShop.Web.ViewModels.Orders
@model BuyViewModel
@{
    this.ViewData["Title"] = "Списък с поръчки";
}

    <h1>@ViewData["Title"]</h1>


<div class="row">
    @if (Model.Orders.Count() > 0)
    {
        foreach (var order in Model.Orders)
        {
            <div class="col-1 text-center">
                <input id="order@order.Id
               name="Orders"
               value="@order.Id"
               class="form-control" />
                <label for="order@order.Id">@order.Name</label>
            </div>
        }

    }
    <div class="row">
    @if (Model.Items.Count() > 0)
    {
        foreach (var item in this.Model.Items)
        {
            <div class="card col-md-3">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ItemTypeName</p>
                    <td>@item.Price лв.</td>

                </div>
            </div>
        }
    }
    </div>



    <div class="w-75">
        <hr />

        <div class="form-group">
            <p class="card-text">
                <hr />
                <form asp-action="Cancel" method="post">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a class="btn btn-info" href="/Items/All">Back to All Items</a>
                        </div>
                        <div>
                            <input type="submit" value="Cancel Service" class="btn btn-danger" />
                        </div>
                    </div>
                </form>
        </div>

                    
               
    
   




