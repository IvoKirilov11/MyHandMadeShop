@using MyHandMadeShop.Web.ViewModels.Orders
@Model.OrderServiceModel
@{
    this.ViewData["Title"] = "Buy";
}
    
<body>

    <h3>Buy Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in @Model.Items)
        {
            <tr>
                <td><a asp-controller="Orders" asp-action="Cancel" asp-route-id="@item.Id">Remove</a></td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="~/image/items/" width="60" /> </td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="items" asp-action="All">Continue Shopping</a>

</body>
</html>