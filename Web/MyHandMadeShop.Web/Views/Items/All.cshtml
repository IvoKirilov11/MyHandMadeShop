@model MyHandMadeShop.Web.ViewModels.Items.ItemsViewModel
@{
    this.ViewData["Title"] = "All Items, page " + Model.PageNumber;
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var item in this.Model.Items)
    {
        <div class="media col-md-4">
            <img src="@item.ImageUrl" width="100" class="mr-3 img-responsive">
            <div class="media-body">
                <h5 class="mt-0"><a asp-action="ById" asp-route-id="@item.Id">@item.Name</a></h5>
                @item.ItemTypeName    
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />