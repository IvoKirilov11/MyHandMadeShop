@model MyHandMadeShop.Web.ViewModels.ItemsType.ListViewModel

@{
    ViewData["Title"] = "ItemType";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Items.Any())
{
    <p>Nothing found.</p>
}
else
{
    <div class="row">
        @foreach (var item in this.Model.Items)
        {
            <div class="card col-md-3">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ItemTypeName</p>
                    
                </div>
            </div>
        }
    </div>
}